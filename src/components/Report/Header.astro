---
import Cap from "@/assets/cap.svg";
import { Image } from "astro:assets";
import { courses } from "@/pages/_metadata/courses";
import { periods } from "@/pages/_metadata/periods";

interface Props {
  name: string;
  course: number;
  period: number;
}

const year = new Date().getFullYear();
const { name, course, period } = Astro.props;
---

<div class="mb-3 flex items-center gap-3 text-3xl">
  <div
    class="w-10 h-10 bg-blue-600 text-white rounded-lg flex items-center justify-center"
  >
    <Cap />
  </div>
  <h1 class="font-bold text-gray-900">Boletín de Calificaciones</h1>
</div>

<header
  class="p-2 mb-6 flex justify-between items-center rounded-lg bg-white border border-gray-200 shadow-sm"
>
  <div class="flex flex-col gap-1 items-start">
    <Image
      width={100}
      height={100}
      class="mix-blend-multiply"
      src="/shields/colombia.jpg"
      alt="Colombia"
    />
    <h2 class="text-2xl font-bold text-gray-900">
      {name}
    </h2>
    <p class="text-gray-700">Chiquinquirá - Boyacá</p>
  </div>

  <div class="flex flex-col gap-3 font-dancing text-black text-xl text-center">
    <p>República de Colombia</p>
    <p>Secretaria de Educación de Boyacá</p>
    <p>Colegio Militar Héroes del Puente de Boyacá</p>
    <p>Ciencia - Esfuerzo - Honestidad</p>
  </div>

  <div class="flex flex-col gap-1 items-end">
    <Image
      width={130}
      height={130}
      class="mix-blend-multiply"
      src="/shields/colegio.jpeg"
      alt="Colombia"
    />
    <span class="text-sm text-gray-600"> </span>
    <p class="text-gray-700">
      Grado: {courses[course]}
    </p>
    <span class="text-md text-gray-500">
      {periods[period]} •
      {year}
    </span>
  </div>
</header>
